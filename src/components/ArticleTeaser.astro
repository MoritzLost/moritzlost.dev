---
import type { CollectionEntry } from 'astro:content';

interface Props {
    article: CollectionEntry<'articles'>;
}

const { article } = Astro.props;
const headlineId = `article-${article.id}-headline`;
---

<h2 id={headlineId}>{article.data.title}</h2>

<a aria-labelledby={headlineId} href={`/articles/${article.id}`}>Read article</a>
