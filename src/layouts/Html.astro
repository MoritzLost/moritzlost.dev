---
import type { ImageMetadata } from 'astro';
import '@styles/main.css';
import { getImage } from 'astro:assets';

export interface Props {
    title: string;
    description?: string;
    image?: ImageMetadata | string;
    imageAlternativeText?: string;
}

const { title, description, image, imageAlternativeText } = Astro.props;

let seoImage;
let imageWidth = null;
let imageHeight = null;
if (image) {
    if (typeof image == 'string') {
        seoImage = image;
    } else {
        const optimizedImage = await getImage({ src: image, width: 1600, quality: 'high' });
        seoImage = optimizedImage.src;
        imageWidth = optimizedImage.attributes.width;
        imageHeight = optimizedImage.attributes.height;
    }
} else {
    seoImage = null;
}
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="color-scheme" content="light dark" />
        <meta name="generator" content={Astro.generator} />
        <link rel="sitemap" type="application/xml" href={new URL('sitemap-index.xml', Astro.site)} />
        <link
            rel="alternate"
            type="application/rss+xml"
            title="Moritz L'Hoest â€” Articles"
            href={new URL('rss.xml', Astro.site)}
        />

        <title>{title}</title>
        {description && <meta name="description" content={description} />}
        {seoImage && <meta property="og:image" content={seoImage} />}
        {imageWidth && <meta property="og:image:width" content={String(imageWidth)} />}
        {imageHeight && <meta property="og:image:height" content={String(imageHeight)} />}
        {seoImage && imageAlternativeText && <meta property="og:image:alt" content={imageAlternativeText} />}
    </head>

    <body>
        <slot />
    </body>
</html>
